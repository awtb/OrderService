{
  "name": "Order Service Dev Environment",
  "dockerComposeFile": "compose.yaml",
  "service": "app",
  "customizations": {
    "jetbrains": {
      "pycharm": {
        "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
        "workspaceFolder": "/workspace"
      }
    },
  },
  "remoteUser": "pycharm",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": false,
      "username": "pycharm",
      "userUid": "1000",
      "userGid": "1000",
      "version": "2.5.4"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "1.3.4",
      "ppa": false
    }
  },
  "postCreateCommand": "uv run pre-commit install && uv run alembic upgrade head",
  "initializeCommand": "echo 'Starting dev container setup...'",
  "onCreateCommand": "echo 'Dev container created successfully!'",
}